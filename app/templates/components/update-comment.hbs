{{#if updateCommentForm}}
  <h4>Update Your Comment Bish</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="name">Yr Name</label>
        {{input value=name id="name" placeholder=comment.name}}
      </div>

      <div class="form-group">
        <label for="body">Put yr comments in here</label>
        {{textarea value=body id="body" placeholder=comment.body}}
      </div>

      <button {{action 'update' comment}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateCommentForm'}}>Update</button>
{{/if}}
