{{#if updatePostForm}}
  <h4>Update {{post.author}}'s {{post.title}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=post.title}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=post.author}}
      </div>

      <div class="form-group">
        <label for="image">Image</label>
        {{input value=image id="image" placeholder=post.image}}
      </div>

      <div class="form-group">
        <label for="category">Category</label>
        {{input value=category id="category" placeholder=post.category}}
      </div>
        <button {{action 'update' post}}><span class="glyphicon glyphicon-glass" aria-hidden="true"></span></button>

    </form>
  </div>
{{else}}
  <button {{action 'updatePostForm'}}><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
{{/if}}
